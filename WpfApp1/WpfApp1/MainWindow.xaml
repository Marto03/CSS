                 HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  VerticalAlignment="Bottom"
                 Keyboard.KeyDown="lastNameStudentsBox_KeyDown" FontSize="20" Margin="10"/>

        <TextBlock Name="ageBlock" Height="80" Grid.Row="1"  Visibility="Collapsed"
