        <TextBlock Name="specBlock" Height="80" Grid.Row="1"  Visibility="Collapsed"
        VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="2"/>
        <TextBox Name="specBox" Height="50"  Grid.Row="2"  Visibility="Collapsed"
         HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  VerticalAlignment="Bottom"
         Keyboard.KeyDown="specStudentsBox_KeyDown" FontSize="20" Margin="10"/>

        <TextBlock Name="courseBlock" Height="80" Grid.Row="1"  Visibility="Collapsed"
        VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="2"/>
